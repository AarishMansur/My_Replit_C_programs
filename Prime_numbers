 // Using while loop

 #include<stdio.h>
 int main()
 {   int num,i=2;
   printf("Write a number  :");
   scanf("%d",&num);

   while(num>0){
     if(num%i==0){
       break;
     }
     i++;
   }
   if(num==i){
     printf("The number is Prime.");
   }
   else{
     printf("The number is not prime.");
 }
